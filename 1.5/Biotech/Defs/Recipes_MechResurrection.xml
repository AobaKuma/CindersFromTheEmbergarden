    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Cinder_AmorphousPolymer</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Cinder_ErodedMechComponent</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Corpse_Cinder_Mech_ErodedEXO</li>
        <li>Corpse_Cinder_Mech_WarSweeper</li>
        <li>Corpse_Cinder_Mech_WarAttacker</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

</Defs>