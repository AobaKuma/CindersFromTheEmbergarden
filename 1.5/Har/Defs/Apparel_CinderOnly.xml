	<!-- ==========================軍用服飾 -->
	<!-- Cinder_Apparel_GhoulUnitGear -->
	<ThingDef
	  ParentName="Cinder_ApparelArmorBase">
		<defName>Cinder_Apparel_GhoulUnitGear</defName>
		<label>ghoul unit gear</label>
		<description>The heavy armor suit of the Ghoul unit, which uses artificial muscles and amorphous polymers to form a sturdy suit, allows the Ghoul unit to charge without damage under fire suppression.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/GhoulUnitGear/Icon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<recipeMaker>
			<researchPrerequisites>
				<li>FlakArmor</li>
				<li>Cinder_HeavyArmor</li>
			</researchPrerequisites>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<defaultIngredientFilter>
				<disallowedThingDefs>
					<li>Silver</li>
					<li>Gold</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
		</recipeMaker>
		<costList>
			<Cinder_AmorphousPolymer>75</Cinder_AmorphousPolymer>
			<ComponentIndustrial>10</ComponentIndustrial>
			<Cinder_BurntStrangeMeat>25</Cinder_BurntStrangeMeat>
		</costList>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>40</costStuffCount>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<WorkToMake>25000</WorkToMake>
			<Mass>8</Mass>
			<StuffEffectMultiplierArmor>0.60</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
			<ArmorRating_Heat>0.5</ArmorRating_Heat>
			<Insulation_Cold>30.4</Insulation_Cold>
			<Insulation_Heat>13</Insulation_Heat>
			<EquipDelay>13</EquipDelay>
		</statBases>
		<apparel>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/GhoulUnitGear/GhoulUnitGear</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
				<li>Middle</li>
			</layers>
			<tags Inherit="false">
				<li>Cinder_Ghoul</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>-2</ShootingAccuracyPawn>
			<ToxicEnvironmentResistance>0.75</ToxicEnvironmentResistance>
			<PainShockThreshold>0.50</PainShockThreshold>
		</equippedStatOffsets>
	</ThingDef>

