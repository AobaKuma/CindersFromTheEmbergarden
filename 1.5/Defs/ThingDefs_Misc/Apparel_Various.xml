	<!-- Cinder_Apparel_BulletproofEquipment -->
	<ThingDef
	  ParentName="Cinder_ApparelArmorBase">
		<defName>Cinder_Apparel_BulletproofEquipment</defName>
		<label>bulletproof equipment</label>
		<description>A lightweight bulletproof suit consisting of a bulletproof vest and a sturdy fabric outer garment, which will not affect daily work and movement, and can defend the whole body, but the armor is generally not as good as a flak vest.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/BulletproofEquipment/Icon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
