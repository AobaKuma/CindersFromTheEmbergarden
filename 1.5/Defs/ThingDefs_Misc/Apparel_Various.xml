	<!-- Cinder_Apparel_ScavHeavyCoat -->
	<ThingDef
	  ParentName="Cinder_ApparelBase">
		<defName>Cinder_Apparel_ScavHeavyCoat</defName>
		<label>scav heavy coat</label>
		<description>A tattered scavenger coat made of a blend of metal plates and fabric, much more durable than it looks.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/ScavHeavyCoat/Icon</texPath>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<Cloth>90</Cloth>
			<Steel>40</Steel>
		</costList>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToMake>5000</WorkToMake>
			<Mass>0.5</Mass>
			<ArmorRating_Sharp>0.6</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.45</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Insulation_Cold>17.4</Insulation_Cold>
			<Insulation_Heat>3</Insulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<apparel>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/ScavHeavyCoat/ScavHeavyCoat</wornGraphicPath>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>Shell</li>
			</layers>
			<tags Inherit="false">
				<li>Cinder_Outlands</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<drawData>
				<dataNorth>
					<layer>51</layer>
				</dataNorth>
			</drawData>
		</apparel>
	</ThingDef>

