    <!-- Cinder_Apparel_DamagedScarf -->
    <ThingDef ParentName="Cinder_HatBase">
        <defName>Cinder_HeadGear_DamagedScarf</defName>
        <label>damaged scarf</label>
        <description>A scarf with burnt edges and metal chain armor wrapped inside can provide some protection for the neck.</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/DamagedScarf/Icon</texPath>
        </graphicData>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<Cloth>50</Cloth>
			<Steel>20</Steel>
		</costList>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <WorkToMake>2100</WorkToMake>
            <Mass>0.5</Mass>
			<ArmorRating_Sharp>0.42</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Heat>0.7</ArmorRating_Heat>
			<Insulation_Cold>14.4</Insulation_Cold>
			<Insulation_Heat>3</Insulation_Heat>
			<EquipDelay>1.3</EquipDelay>
        </statBases>
        <apparel>
		    <parentTagDef>ApparelBody</parentTagDef>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/DamagedScarf/DamagedScarf</wornGraphicPath>
            <bodyPartGroups>
                <li>Neck</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <renderSkipFlags>
                <li>None</li>
            </renderSkipFlags>
            <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
            <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
            <canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
            <drawData>
                <defaultData>
                    <layer>48</layer>
                </defaultData>
                <dataNorth>
                    <layer>51</layer>
                </dataNorth>
            </drawData>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="Cinder_ArmorHelmetBase">
        <defName>Cinder_HeadGear_AssaultHelmet</defName>
        <label>assault helmet</label>
        <description>A bulletproof helmet for assault missions, reinforced with plasteel, heavy but capable of providing effective defense.</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/AssaultHelmet/Icon</texPath>
        </graphicData>
		<recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<defaultIngredientFilter>
				<disallowedThingDefs>
					<li>Silver</li>
					<li>Gold</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
		</recipeMaker>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
            <Plasteel>20</Plasteel>
		</costList>
		<stuffCategories>
				<li>Metallic</li>
			</stuffCategories>
			<defaultStuff>Cinder_AmorphousPolymer</defaultStuff>
		<costStuffCount>30</costStuffCount>
        <statBases>
            <WorkToMake>12000</WorkToMake>
            <MaxHitPoints>400</MaxHitPoints>
            <Mass>2</Mass>
            <ArmorRating_Sharp>0.52</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<ArmorRating_Heat>0.9</ArmorRating_Heat>
			<StuffEffectMultiplierArmor>0.60</StuffEffectMultiplierArmor>
			<Insulation_Cold>10.4</Insulation_Cold>
			<Insulation_Heat>9</Insulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/AssaultHelmet/AssaultHelmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
        </apparel>
		<equippedStatOffsets>
        <PainShockThreshold>0.20</PainShockThreshold>
        </equippedStatOffsets>
    </ThingDef>

