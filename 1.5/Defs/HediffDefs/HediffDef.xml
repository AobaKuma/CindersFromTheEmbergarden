	<HediffDef>
		<defName>Cinder_ResurrectComa</defName>
		<label>resurrect coma</label>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.9, 1.0, 0.35)</defaultLabelColor>
		<initialSeverity>1</initialSeverity>
		<description>Resurrection coma caused by resurrection.</description>
		<alwaysAllowMothballCached>true</alwaysAllowMothballCached>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>3500~5500</disappearsAfterTicks>
				<showRemainingTime>true</showRemainingTime>
			</li>
		</comps>
		<stages>
			<li>
				<totalBleedFactor>0</totalBleedFactor>
				<hungerRateFactor>0.01</hungerRateFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.01</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-999</offset>
					</li>
				</capMods>
				<statFactors>
					<IncomingDamageFactor>0.01</IncomingDamageFactor>
					<RestFallRateFactor>0.01</RestFallRateFactor>
					<ToxicEnvironmentResistance>1</ToxicEnvironmentResistance>
					<NecrotionResistance MayRequire="BlackMarket420.TAOFC">2.0</NecrotionResistance>
	                <NecrotionEnvironmentResistance MayRequire="BlackMarket420.TAOFC">2.0</NecrotionEnvironmentResistance>
				</statFactors>
				<damageFactors>
					<Flame>0</Flame>
					<Burn>0</Burn>
					<Cinder_Bomb>0</Cinder_Bomb>
					<Cinder_BombB>0</Cinder_BombB>
					<Vaporize>0</Vaporize>
					<Cinder_BombC>0</Cinder_BombC>
					<Bullet>0.6</Bullet>
				</damageFactors>
			</li>
		</stages>
	</HediffDef>

