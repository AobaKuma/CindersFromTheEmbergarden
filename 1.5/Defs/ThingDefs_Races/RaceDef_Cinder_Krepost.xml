<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="Cinder_BaseMechaWalker">
    <defName>Cinder_Mech_Krepost</defName>
    <label>Tombstone</label>
    <description>Twisted, ferocious, and terrifying war weapons, as well as abnormal objects residing in the remains of the weapons. That was once a partner on the same side, but now there is only one aircraft that can cause significant casualties to the armed exploration team. They are eroded fortresses, stumbling and marching slowly, with deadly tombstones..</description>
    <statBases>
      <MoveSpeed>3.0</MoveSpeed>
      <ArmorRating_Sharp>1.20</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.8</ArmorRating_Blunt>
      <ArmorRating_Heat>1.5</ArmorRating_Heat>
      <StaggerDurationFactor>0</StaggerDurationFactor>
      <PsychicSensitivity>0</PsychicSensitivity>
      <ShootingAccuracyPawn>2</ShootingAccuracyPawn>
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">8</BandwidthCost>
      <WastepacksPerRecharge MayRequire="Ludeon.Rimworld.Biotech">6</WastepacksPerRecharge>
    </statBases>
    <damageMultipliers>
      <li>
        <damageDef>EMP</damageDef>
        <multiplier>0.40</multiplier>
      </li>
    </damageMultipliers>
    <race>
      <mechFixedSkillLevel>12</mechFixedSkillLevel>
      <body>Cinder_ErodedKrepost</body>
      <baseBodySize>4</baseBodySize>
      <baseHealthScale>5.5</baseHealthScale>
      <mechWeightClass>UltraHeavy</mechWeightClass>
      <detritusLeavings>
        <li>
          <def>Cinder_ChunkSlag</def>
          <texOverrideIndex>7</texOverrideIndex>
          <spawnChance>0.4</spawnChance>
        </li>
        <li>
          <def>Cinder_ChunkSlag</def>
          <texOverrideIndex>4</texOverrideIndex>
          <spawnChance>0.4</spawnChance>
        </li>
      </detritusLeavings>
    </race>
    <comps>
      <li Class="Embergarden.CompProperties_AddHediff">
        <hediffDefs>
          <li>Cinder_PolymerActivation</li>
          <li>Cinder_Regen</li>
        </hediffDefs>
      </li>
      <li Class="Embergarden.CompProperties_VehicleWeapon">
        <drawData>
          <dataEast>
            <offset>(0.6,0,-0.6)</offset>
          </dataEast>
          <dataWest>
            <offset>(-0.4,0,1.1)</offset>
            <layer>-20</layer>
          </dataWest>
          <dataSouth>
            <offset>(-1.1,0,-0.2)</offset>
          </dataSouth>
          <dataNorth>
            <offset>(1.1,0,0.2)</offset>
          </dataNorth>
        </drawData>
        <turretRotationFollowPawn>true</turretRotationFollowPawn>
        <rotationSmoothTime>0.12</rotationSmoothTime>
      </li>
      <li Class="Embergarden.CompProperties_MultipleTurretGun">
        <subTurrets>
          <li>
            <ID>forward machinegun</ID>
            <turret>Cinder_Mounted_Tentacle</turret>
            <autoAttack>true</autoAttack>
            <warmingTime>0.75</warmingTime>
            <angleOffset>-90</angleOffset>
            <renderNodeProperties>
              <li>
                <nodeClass>Embergarden.PawnRenderNode_SubTurretGun</nodeClass>
                <workerClass>Embergarden.PawnRenderNodeWorker_SubTurretGun</workerClass>
                <parentTagDef>Body</parentTagDef>
                <drawSize>1.25</drawSize>
                <baseLayer>-5</baseLayer>
                <pawnType>Any</pawnType>
                <drawData>
                  <dataEast>
                    <offset>(1.4,0,-0.05)</offset>
                  </dataEast>
                  <dataWest>
                    <offset>(-1.4,0,-0.05)</offset>
                    <rotationOffset>180</rotationOffset>
                  </dataWest>
                  <dataSouth>
                    <offset>(0.15,0,-1.30)</offset>
                  </dataSouth>
                  <dataNorth>
                    <offset>(-0.15,0,0.65)</offset>
                  </dataNorth>
                </drawData>
              </li>
            </renderNodeProperties>
          </li>
          <li>
            <ID>top machinegun</ID>
            <turret>Cinder_Mounted_KPVTurret</turret>
            <autoAttack>true</autoAttack>
            <warmingTime>8</warmingTime>
            <angleOffset>-90</angleOffset>
            <renderNodeProperties>
              <li>
                <nodeClass>Embergarden.PawnRenderNode_SubTurretGun</nodeClass>
                <workerClass>Embergarden.PawnRenderNodeWorker_SubTurretGun</workerClass>
                <parentTagDef>Body</parentTagDef>
                <drawSize>2</drawSize>
                <baseLayer>20</baseLayer>
                <pawnType>Any</pawnType>
                <drawData>
                  <dataEast>
                    <offset>(-0.25,0,1)</offset>
                  </dataEast>
                  <dataWest>
                    <offset>(0.3,0,0.1)</offset>
                    <rotationOffset>180</rotationOffset>
                  </dataWest>
                  <dataSouth>
                    <offset>(0.45,0,0.5)</offset>
                    <rotationOffset>0</rotationOffset>
                  </dataSouth>
                  <dataNorth>
                    <offset>(-0.45,0,-0.5)</offset>
                    <rotationOffset>0</rotationOffset>
                  </dataNorth>
                </drawData>
              </li>
            </renderNodeProperties>
          </li>
          <li>
            <ID>rocket pod</ID>
            <turret>Cinder_Mounted_Rocket</turret>
            <autoAttack>true</autoAttack>
            <warmingTime>5</warmingTime>
            <angleOffset>-90</angleOffset>
            <IdleAngleOffset>-51</IdleAngleOffset>
            <renderNodeProperties>
              <li>
                <nodeClass>Embergarden.PawnRenderNode_SubTurretGun</nodeClass>
                <workerClass>Embergarden.PawnRenderNodeWorker_SubTurretGun</workerClass>
                <parentTagDef>Body</parentTagDef>
                <drawSize>0.75</drawSize>
                <baseLayer>20</baseLayer>
                <pawnType>Any</pawnType>
                <drawData>
                  <dataEast>
                    <offset>(1.2,0,1)</offset>
                    <layer>-1</layer>
                  </dataEast>
                  <dataWest>
                    <offset>(-1.15,0,-0.55)</offset>
                    <rotationOffset>180</rotationOffset>
                  </dataWest>
                  <dataSouth>
                    <offset>(0.85,0,-1.1)</offset>
                  </dataSouth>
                  <dataNorth>
                    <offset>(-0.85,0,0.7)</offset>
                    <layer>-1</layer>
                  </dataNorth>
                </drawData>
              </li>
            </renderNodeProperties>
          </li>
        </subTurrets>
      </li>
    </comps>
    <modExtensions>
      <li MayRequire="aoba.deadmanswitch.core" Class="DMS.MechWeaponExtension">
        <EnableWeaponFilter>true</EnableWeaponFilter>
        <UsableWeaponTags>
          <li MayRequire="vanillaexpanded.vwehw">HeavyGun</li><!--重型武器拓展-->
          <li>DMS_Tarbosaurus_Gun</li>
          <li>DMS_MechWeaponUltraHeavy</li>
          <li>DMS_MechWeaponHeavy</li>
          <li>H_Gatling20mm</li>
          <li>V_Gatling30mm</li>
          <li>2A38M</li>
          <li>DMS_DragoonGun</li>
          <li>DMS_VladimirovMachineGun</li>
          <li>DMS_MechWeaponTankGun</li>
        </UsableWeaponTags>
        <EnableTechLevelFilter>true</EnableTechLevelFilter>
        <UsableTechLevels>
          <li>Industrial</li>
        </UsableTechLevels>
      </li>
    </modExtensions>
    <tools Inherit="False">
      <li>
        <label>Front tentacle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>55</power>
        <cooldownTime>2.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.08</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>Left Leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>24</power>
        <cooldownTime>4</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
        <chanceFactor>0.2</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>15</amount>
            </li>
            <li>
              <def>Cider_CutB</def>
              <amount>5</amount>
              <chance>1</chance>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>Right Leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>24</power>
        <cooldownTime>4</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
        <chanceFactor>0.2</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>15</amount>
            </li>
            <li>
              <def>Cider_CutB</def>
              <amount>5</amount>
              <chance>1</chance>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <butcherProducts>
      <Steel>100</Steel>
      <Cinder_ChunkSlag>8</Cinder_ChunkSlag>
    </butcherProducts>
    <killedLeavingsPlayerHostile>
      <Cinder_AmorphousNeuralSpine>1</Cinder_AmorphousNeuralSpine>
    </killedLeavingsPlayerHostile>
    <castEdgeShadows>false</castEdgeShadows>
    <staticSunShadowHeight>0</staticSunShadowHeight>
  </ThingDef>

  <PawnKindDef ParentName="BaseMechanoidKind" Name="DMS_BaseKrepostKind">
    <defName>Cinder_Mech_Krepost</defName>
    <label>Tombstone</label>
    <allowInMechClusters>false</allowInMechClusters>
    <race>Cinder_Mech_Krepost</race>
    <isFighter>true</isFighter>
    <combatPower>1800</combatPower>                                               <!--威脅點數-->
    <maxPerGroup>2</maxPerGroup>                                                 <!--單個集群內的數量-->
    <isBoss>true</isBoss>
    <lifeStages>                                                                 <!--身體圖片-->
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mech/erodedKrepost</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>4.2</drawSize>
          <shadowData>
            <volume>(1.25,1,1.25)</volume>
            <offset>(0,0,-0.5)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mech/erodedKrepost</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>4.2</drawSize>
          <shadowData>
            <volume>(1.25,1,1.25)</volume>
            <offset>(0,0,-0.5)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>9999~9999</weaponMoney>
    <weaponTags>
      <li>Cinder_MechGun_AnvilDiscipline</li>
    </weaponTags>
    <techHediffsChance>1</techHediffsChance>
    <techHediffsMoney>9999~9999</techHediffsMoney>
    <abilities>
      <li>Cinder_AmorphousIED</li>
      <li>Cinder_EternalFearAbility</li>
      <li MayRequire="Aoba.DeadManSwitch.AncientCorps">DMSAC_APS</li>
    </abilities>
  </PawnKindDef>
</Defs>