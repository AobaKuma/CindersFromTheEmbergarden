		<tradeNeverStack>true</tradeNeverStack>
		<useHitPoints>true</useHitPoints>
		<relicChance>0</relicChance>
		<statBases>
			<MarketValue>1200</MarketValue>
			<MaxHitPoints>2000</MaxHitPoints>
		</statBases>
		<drawGUIOverlay>true</drawGUIOverlay>
