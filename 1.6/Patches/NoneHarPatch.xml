<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Humanoid Alien Races</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="Cinder_Ghoul"]/apparelRequired</xpath>
					<value>
                    <apparelRequired>
			              <li>Cinder_HeadGear_GhoulUnitHelmet</li>
			              <li>Cinder_Apparel_BrokenGhoulUnitGear</li>
		            </apparelRequired>
				</value>
			</li>
			<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="Cinder_EliteGhoul"]/apparelRequired</xpath>
					<value>
                    <apparelRequired>
			              <li>Cinder_HeadGear_GhoulUnitHelmet</li>
			              <li>Cinder_Apparel_GhoulUnitGear</li>
		            </apparelRequired>
				</value>
			</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
